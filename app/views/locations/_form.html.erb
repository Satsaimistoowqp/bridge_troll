<div class="row">
  <div class="col-md-6">
    <%= simple_form_for(@location) do |f| %>
      <%= render 'shared/model_error_messages', model: @location %>

      <%= render 'shared/chapter_select', f: f %>

      <%= f.input :name %>

      <%= f.input :address_1 %>

      <%= f.input :address_2 %>

      <%= f.input :city %>

      <%= f.input :state %>

      <%= f.input :zip %>

      <% if @location.additional_details_editable_by?(current_user) %>
        <%= f.input :contact_info %>
        <%= f.input :notes %>
      <% end %>

      <div class="actions">
        <%= f.submit class: 'btn btn-submit' %>
        <% if @location.archivable_by?(current_user) %>
          <%= f.submit 'Archive Location', class: 'btn btn-warning' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
