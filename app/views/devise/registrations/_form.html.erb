<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => is_registered ? 'put' : 'post'}) do |f| %>
  <%= devise_error_messages! %>

  <% if params[:return_to] %>
    <%= hidden_field_tag :return_to, params[:return_to] %>
  <% end %>

  <div class='field'>
    <%= f.label :first_name, "First/Given Name" %>
    <%= f.text_field :first_name %>
  </div>

  <div class='field'>
    <%= f.label :last_name, "Last/Family Name" %>
    <%= f.text_field :last_name %>
  </div>

  <div class='field'>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class='field'>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div class='field'>
    <%= f.label :chapter_ids, 'Chapters' %>
    <%= f.collection_check_boxes(:chapter_ids, Chapter.order(:name), :id, :name, {item_wrapper_class: 'checkbox_row', item_wrapper_tag: 'div'}) %>
  </div>

  <div class='field'>
    <%= f.label :allow_event_email do %>
      <%= f.check_box :allow_event_email %> Allow Bridge Troll to send you an email every time a new event is posted in one of those chapters
    <% end %>
  </div>

  <div class='field'>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, include_blank: 'Select Time Zone' %>
  </div>

  <% if f.object.password_required? %>
    <div class='field'>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <% if is_registered %>
        <span class="help-block">(leave blank if you don't want to change it)</span>
      <% end %>
    </div>

    <div class='field'>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
  <% end %>

  <% if is_registered %>
    <div class='field'>
      <%= f.label :current_password %>
      <%= f.password_field :current_password %>
      <span class="help-block">(we need your current password to confirm your changes if you are updating your password or your email address)</span>
    </div>
  <% end %>

  <div><%= f.submit button_text, class: 'btn btn-submit' %></div>
  <% if is_registered %>
    <hr>
    <div>
      <h2>Authentication methods</h2>
      <ul class='external-auth'>
        <% OmniauthProviders.provider_data.each do |provider| %>
          <li>
            <% existing_authentication = f.object.authentications.find { |a| a.provider.to_sym == provider[:key] } %>
            <% if existing_authentication %>
              <i class='fa <%= provider[:icon] %>'></i>
              <%= provider[:name] %> (UID <%= existing_authentication.uid %>)
            <% else %>
              <%= link_to user_omniauth_authorize_path(provider[:key]) do %>
                <i class='fa <%= provider[:icon] %>'></i>
                Associate with <%= provider[:name] %>
              <% end %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <hr>
    <div>
      <%= label_tag :meetup_id, 'Associated Meetup Account' %>
      <% if resource.meetup_id %>
        Currently associated
        with <%= link_to "Meetup user #{resource.meetup_id}.", "http://www.meetup.com/members/#{resource.meetup_id}/" %></p>
      <% else %>
        <p>You haven't connected your Meetup.com account yet! :(</p>

        <p>Connect your Meetup.com account to import information about past workshops you have attended.</p>
        <%= link_to 'Connect to Meetup.com', "/auth/meetup", class: 'btn' %>
      <% end %>
    </div>
    <hr>
  <% end %>
<% end %>
